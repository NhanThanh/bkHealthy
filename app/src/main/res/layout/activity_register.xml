<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".views.RegisterActivity">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:id="@+id/layout_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:id="@+id/layout_register_email">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                        <ImageView
                            android:id="@+id/login_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/login_image"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <com.ttcnpm.bk_healthy.helper.CustomFontTextView
                            android:paddingLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Username"
                            android:focusableInTouchMode="true"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />

                        <com.ttcnpm.bk_healthy.helper.CustomFontEditText
                            app:textStyle="10"
                            android:textSize="15dp"
                            android:id="@+id/user_name"
                            android:hint="Username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:background="@color/bg_transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_border" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <com.ttcnpm.bk_healthy.helper.CustomFontTextView
                            android:paddingLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="First name"
                            android:focusableInTouchMode="true"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />

                        <com.ttcnpm.bk_healthy.helper.CustomFontEditText
                            app:textStyle="10"
                            android:textSize="15dp"
                            android:id="@+id/first_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:hint="First name"
                            android:textColor="@color/black"
                            android:background="@color/bg_transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_border" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <com.ttcnpm.bk_healthy.helper.CustomFontTextView
                            android:paddingLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Last name"
                            android:focusableInTouchMode="true"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />

                        <com.ttcnpm.bk_healthy.helper.CustomFontEditText
                            app:textStyle="10"
                            android:textSize="15dp"
                            android:id="@+id/last_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Last name"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:background="@color/bg_transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_border" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <com.ttcnpm.bk_healthy.helper.CustomFontTextView
                            android:paddingLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Password"
                            android:focusableInTouchMode="true"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />

                        <com.ttcnpm.bk_healthy.helper.CustomFontEditText
                            app:textStyle="10"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:hint="Password"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:background="@color/bg_transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_border" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:background="@color/white"
                        android:gravity="center_vertical">

                        <com.ttcnpm.bk_healthy.helper.CustomFontTextView
                            android:paddingLeft="10dp"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Confirmation Password"
                            android:focusableInTouchMode="true"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:gravity="center_vertical" />

                        <com.ttcnpm.bk_healthy.helper.CustomFontEditText
                            app:textStyle="10"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/password_confirmation"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:hint="Confirmation Password"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:background="@color/bg_transparent" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_border" />

                    <Button
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/submit_button"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:background="@drawable/bg_button_big_blue" />
                </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
