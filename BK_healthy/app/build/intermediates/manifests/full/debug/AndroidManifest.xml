<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ttcnpm.bk_healthy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.ttcnpm.bk_healthy.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.ttcnpm.bk_healthy.views.WelcomeActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ttcnpm.bk_healthy.views.LoginActivity"
            android:label="SIGN IN" />
        <activity
            android:name="com.ttcnpm.bk_healthy.views.RegisterActivity"
            android:label="REGISTER" />
        <activity android:name="com.ttcnpm.bk_healthy.views.HomeActivity" />
        <activity android:name="com.ttcnpm.bk_healthy.views.ListFood" />
        <activity android:name="com.ttcnpm.bk_healthy.views.CheDoAnActivity" />
    </application>

</manifest>