<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".views.LoginActivity">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/login_image"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_border" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.ttcnpm.bk_healthy.helper.CustomFontTextView
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Username"
            android:focusableInTouchMode="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="center_vertical" />

        <com.ttcnpm.bk_healthy.helper.CustomFontEditText
            app:textStyle="10"
            android:textSize="15dp"
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:background="@color/bg_transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_border" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.ttcnpm.bk_healthy.helper.CustomFontTextView
            android:paddingLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password"
            android:textAllCaps="false"
            android:focusableInTouchMode="true"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical" />

        <com.ttcnpm.bk_healthy.helper.CustomFontEditText
            app:textStyle="10"
            android:textSize="15dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black"
            android:background="@color/bg_transparent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_border" />

    <Button
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/sign_in_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_big_blue" />

    <Button
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/forgot_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="Forgot password"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_big_dark_grey" />
</LinearLayout>
